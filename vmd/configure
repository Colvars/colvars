## OSU MVAPICH
# $mpi_dir         = "/usr/mpi/gcc/mvapich-1.0.0";
# $mpi_include     = "-I$mpi_dir/include";
# $mpi_library     = "";
# $mpi_libs        = "-L$mpi_dir/lib -lmpich -libverbs -libumad -libcommon";

@mpi_cc          = ();
