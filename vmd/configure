$mpi_defines     = "-DVMDMPI ";
## Argonne MPICH
$mpi_dir         = "/usr/lib64/mpich";
$mpi_include     = "-I/usr/include/mpich-x86_64";
$mpi_library     = "-L$mpi_dir/lib";
$mpi_libs        = "-lmpich";
## OpenMPI
