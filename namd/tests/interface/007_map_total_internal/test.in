colvarsTrajFrequency 1
indexFile ../Common/da.ndx

colvar {
    name numatoms
    width 2.0
    mapTotal {
        name numatoms
        mapFile ../Common/da.density.dx
        atoms {
            # Use internal selection
            indexGroup Protein
        }
    }
}


harmonic {
    colvars numatoms
    centers 50.0
    forceConstant 0.2
}


colvar {
    name numatoms_rot
    width 2.0
    mapTotal {
        name numatoms_rot
        mapFile ../Common/da.density.dx
        atoms {
            # Use internal selection with fitting group
            indexGroup Protein
            rotateToReference yes
            centerToReference yes
            fittingGroup {
                atomNumbers  54 64 74 84 99 
            }
            # Reused from 014_refposgroup
            refPositionsFile ../Common/310turn-ideal.xyz
        }
    }
}


colvar {
    name numatoms_ref
    width 2.0
    mapTotal {
        name numatoms_ref
        mapName map
        # Use NAMD ComputeGLobal
    }
}
