colvarsTrajFrequency 1


colvar {
    name rmsdA

    outputTotalForce on
    #  outputAppliedForce on
    width 1.0 

    lowerBoundary 0.0
    upperBoundary 5.0

    lowerWall 0.0
    upperWall 5.0

    lowerWallConstant 100.0
    upperWallConstant 100.0

    rmsd {
        atoms {
            atomNumbers { 1 2 3 4 5 6 7 8 }
        }
        refpositionsfile ../Common/da.xyz
    }
} 


