colvarsTrajFrequency    1

indexFile ../Common/da.ndx


colvar {
    name rmsdA

    outputTotalForce on
    #  outputAppliedForce on
    width 1.0 

    lowerboundary 0.0
    upperboundary 5.0

    lowerwall 0.0
    upperwall 5.0

    lowerwallconstant 100.0
    upperwallconstant 100.0

    rmsd {
        atoms {
            indexGroup Protein_C-alpha
        }
        refPositionsFile ../Common/da.xyz
    }
} 


colvar {
    name rmsdB

    outputTotalForce on
    #  outputAppliedForce on
    width 1.0 

    lowerboundary 0.0
    upperboundary 5.0

    lowerwall 0.0
    upperwall 5.0

    lowerwallconstant 100.0
    upperwallconstant 100.0

    rmsd {
        atoms {
            indexGroup Protein_C-alpha
        }
        refpositionsfile ../Common/da.xyz
    }
} 


harmonic {
    colvars        rmsdA rmsdB
    forceConstant  1.0
    centers        0.0   0.0
}
