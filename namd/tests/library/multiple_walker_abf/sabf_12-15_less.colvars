colvarsTrajFrequency     500
colvarsRestartFrequency  20000
smp off # SMP and multiple-replica are incompatible

colvar {
   name endToEnd
  
   width 0.1

   lowerBoundary 12
   lowerWall 12
   lowerWallConstant 20.0
   upperBoundary 15
   upperWall 15
   upperWallConstant 20.0

   outputValue
   outputTotalForce
   outputAppliedForce

   distance {
      group1 {
atomNumbers { 92 }
      }
      group2 {
atomNumbers { 10 }
      }
   }
}

abf {
   name abf
   colvars endToEnd
   fullSamples 500
   historyFreq 20000
   shared
   sharedFreq 2000
}
