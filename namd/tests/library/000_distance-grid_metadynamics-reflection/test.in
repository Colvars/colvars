colvarsTrajFrequency 1
colvarsRestartFrequency 10
indexFile index.ndx

colvar {

    name one

    outputAppliedForce on

    # use a non-trivial width to test bias behavior
    width 0.5
    # The lower boundary is already defined at 0 for a distance function
    # lowerBoundary 0.0
    upperBoundary 10.0

    hardUpperBoundary on
    hardLowerBoundary on

    distance {
        group1 {
            indexGroup group1
        }
        group2 {
            indexGroup group2
        }
    }
} 

metadynamics {
    colvars        one
    hillWeight     0.001
    hillWidth      1.2533141373155001  # Old default
    newHillFrequency 10
    useHillsReflection on
}

harmonicWalls {
    name wall_dist_N_O
    colvars dist_N_O
    forceConstant 0.6
    upperWalls 10.0
}
