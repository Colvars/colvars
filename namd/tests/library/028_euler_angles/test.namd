
##################################################
# PRODUCTION MD
##################################################


##################################################
# MD SECTION
##################################################



# TOPOLOGY
seed 1
structure            bound.psf


# FORCE FIELD

parameters          par_all27_prot_lipid.prm

paraTypeCharmm       on


# 1-4 TERMs

exclude              scaled1-4
1-4scaling           1.0


# INPUT FILES


coordinates          bound.pdb
bincoordinates       min.coor
binvelocities        min.vel
ExtendedSystem       min.xsc 


# OUTPUT FILES

binaryoutput         yes
binaryrestart        yes

outputname           test

# FREQUENCY FOR DUMPING OUTPUT DATA

outputenergies       5000
outputtiming         5000
outputpressure       5000
restartfreq          5000

# CUT-OFFs

hgroupcutoff         2.8
switching            on
switchdist           10.0
cutoff               12.0
pairlistdist         14.0


# WRAPPING

wrapAll              off
wrapWater            on


# CONSTANT-T

stochRescale             on
stochRescaleTemp         300
stochRescalePeriod       2.0 


# CONSTANT-P

langevinpiston       on 
langevinpistontarget 1.01325 
langevinpistonperiod 200
langevinpistondecay  100
langevinpistontemp   300

strainrate           0.  0.  0.
usegrouppressure     yes

useflexiblecell      no  


# PME

PME                  yes
PMETolerance         10e-6
PMEInterpOrder       4
PMEGridSpacing       1.0


# MULTIPLE TIME-STEP PROPAGATOR

timestep             2.0

fullelectfrequency   2
nonbondedfreq        1


# SHAKE/RATTLE

rigidbonds           all     
rigidtolerance       0.00001
rigiditerations      400


# PARALLELISM

stepspercycle        10
splitpatch           hydrogen
margin               2

colvars              on
colvarsConfig        colvars.in

# minimize             100
# reinitvels           300

run 20

