colvarsTrajFrequency    1
indexFile               colvars.ndx

colvar {
    name eulerTheta
    eulerTheta {
        atoms {
            indexGroup          BFEE_Ligand
            centerReference     on
            rotateReference     on
            enableFitGradients  yes
            fittingGroup {
                indexGroup      BFEE_Protein
            }
            refPositionsFile    reference.xyz
        }
        refPositionsFile        reference.xyz
    }
}

colvar {
    name eulerPhi
    eulerPhi {
        atoms {
            indexGroup          BFEE_Ligand
            centerReference     on
            rotateReference     on
            enableFitGradients  yes
            fittingGroup {
                indexGroup      BFEE_Protein
            }
            refPositionsFile    reference.xyz
        }
        refPositionsFile        reference.xyz
    }
}


colvar {
    name eulerPsi
    eulerPsi {
        atoms {
            indexGroup          BFEE_Ligand
            centerReference     on
            rotateReference     on
            enableFitGradients  yes
            fittingGroup {
                indexGroup      BFEE_Protein
            }
            refPositionsFile    reference.xyz
        }
        refPositionsFile        reference.xyz
    }
}

harmonic {
    colvars      eulerPsi
    forceConstant   0.1
    centers  0
    outputEnergy on
}

harmonic {
    colvars      eulerPhi
    forceConstant   0.1
    centers  0
    outputEnergy on
}

harmonic {
    colvars      eulerTheta
    forceConstant   0.1
    centers  0
    outputEnergy on
}
