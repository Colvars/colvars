colvarsTrajFrequency 1
colvarsRestartFrequency 10
indexFile index.ndx

colvar {

    name one

    outputAppliedForce on

    width 0.5

    distance {
        group1 {
            indexGroup group1
        }
        group2 {
            indexGroup group2
        }
