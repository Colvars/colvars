# -*- lammps -*-

shell ln -fs "../common/da.ndx" "index.ndx"
shell ln -fs "../common/da-Calpha.xyz" "rmsd_atoms_refpos.xyz"
shell ln -fs "../common/da-noh.xyz" "heavy_atoms_refpos.xyz"
