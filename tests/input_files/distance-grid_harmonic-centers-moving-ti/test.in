colvarsTrajFrequency 1
colvarsRestartFrequency 10
indexFile index.ndx

colvar {

    name one

    outputAppliedForce on

    # use a non-trivial width to test bias behavior
    width 0.5
    # The lower boundary is already defined at 0 for a distance function
    # lowerBoundary 0.0
    upperBoundary 10.0

    distance {
        group1 {
            indexGroup group1
        }
        group2 {
            indexGroup group2
        }
    }
} 

harmonic {
    colvars        one
    centers        0.1
    forceConstant  0.001

    targetCenters  0.2
    targetNumSteps 10

    outputEnergy   yes
    outputCenters  yes
    outputAccumulatedWork yes
    writeTIPMF     yes
}
