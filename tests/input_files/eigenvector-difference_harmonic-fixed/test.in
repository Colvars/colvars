colvarsTrajFrequency 1
colvarsRestartFrequency 10
indexFile index.ndx

colvar {

    name one

    outputAppliedForce on

    width 0.5

    eigenvector {
        debugGradients on
        atoms {
            indexGroup RMSD_atoms
        }
        refPositionsFile rmsd_atoms_refpos.xyz
        vectorFile rmsd_atoms_refpos2.xyz
        differenceVector yes
    }
}

harmonic {
    colvars        one
    centers        0.1
    forceConstant  0.001
}
