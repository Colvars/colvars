colvar {

    name one

    outputAppliedForce on

    width 0.5

    distanceZ {
        axis (0.3, -0.4, 0.5)
        debugGradients on
        main {
            indexGroup group5
            centerToReference yes
            rotateToReference yes
            refPositionsGroup {
                indexGroup heavy_atoms
            }
            refPositionsFile heavy_atoms_refpos.xyz
        }
        ref {
            indexGroup group1
            centerToReference yes
            rotateToReference yes
            refPositionsGroup {
                indexGroup heavy_atoms
            }
            refPositionsFile heavy_atoms_refpos.xyz
        }
    }
} 

