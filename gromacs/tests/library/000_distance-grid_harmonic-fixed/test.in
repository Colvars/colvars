colvarsTrajFrequency 1
colvarsRestartFrequency 10
indexFile index.ndx

colvar {

    name one

    outputAppliedForce on

    # use a non-trivial width to test bias behavior
    width 0.05
    lowerBoundary 0.0
    upperBoundary 1.0

    distance {
        group1 {
            indexGroup group1
        }
        group2 {
            indexGroup group2
        }
    }
} 

harmonic {
    colvars        one
    centers        0.01
    forceConstant  0.004184
}
