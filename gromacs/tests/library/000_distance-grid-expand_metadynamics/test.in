colvarsTrajFrequency 1
colvarsRestartFrequency 10
indexFile index.ndx

colvar {

    name one

    outputAppliedForce on

    # use a non-trivial width to test bias behavior
    width 0.01
    lowerBoundary 0.0
    upperBoundary 0.01

    expandBoundaries yes
    hardLowerBoundary yes

    distance {
        group1 {
            indexGroup group1
        }
        group2 {
            indexGroup group2
        }
    }
} 

metadynamics {
    colvars        one
    hillWeight     0.004184
}
