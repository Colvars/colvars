colvar {
    name dist_N_O
    outputAppliedForce on
    upperBoundary 12.0
    width 0.1
    distance {
        group1 {
            psfSegID AMM1
            atomNameResidueRange N1 1-1
        }
        group2 {
            psfSegID WAT
            atomNameResidueRange OH2 1-1
        }
    }
} 


metadynamics {
    name mtd_dist_N_O
    colvars dist_N_O
    gaussianSigmas 0.2
    hillWeight 0.001
    outputEnergy yes
    outputFeatures active
}



